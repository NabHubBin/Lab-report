#include <iostream>
using namespace std;

int main(){
    int rows;
    cout << "Enter the number of rows for the inverted Pyramid:";
    cin >> rows;
    for(int i = rows; i >= 1; i--){
    for(int j = 0; j < rows - i; j++){
    cout << " ";
}
    for(int j = 0; j < (2 * i - 1); j++){
    cout << "*";
}
    cout << endl;
}
    return 0;
}
