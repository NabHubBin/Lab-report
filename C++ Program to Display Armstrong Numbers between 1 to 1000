#include <iostream>
#include <cmath>
using namespace std;

int main() {
    cout << "Armstrong numbers between 1 and 1000:\n";

    for (int num = 1; num <= 1000; num++) {
        int originalNum = num;
        int n = 0;
        double result = 0.0;
        int temp = num;
        while (temp != 0) {
            temp /= 10;
            n++;
}

    temp = num;
    while (temp != 0) {
        int remainder = temp % 10;
        result += pow(remainder, n);
        temp /= 10;
}
    if ((int)result == num) {
        cout << num << " ";
}
}
return 0;
}
