#include <iostream>
#include <algorithm>
using namespace std;

int main(){
    int rows = 3, cols = 4;

    int arr[3][4] = {
        {8, 4, 1, 7},
        {3, 8, 5, 4},
        {6, 0, 6, 3}
};
    for (int i = 0; i < rows; i++){
        sort(arr[i], arr[i] + cols);
}
    cout << "2D Array after sorting each row:\n";
    for (int i = 0; i < rows; i++){
        for (int j = 0; j < cols; j++){
    cout << arr[i][j] << " ";
}
    cout << endl;
}

    return 0;
}
