#include <iostream>
using namespace std;

long long power(int base, int exp){
    if (exp == 0)
        return 1;

    return base * power(base, exp - 1);
}

int main(){
    int base, exp;

    cout << "Enter Base: ";
    cin >> base;

    cout << "Enter Exponent: ";
    cin >> exp;

    if (exp < 0){
    cout << "Exponent should be Non-Negative." << endl;
} else {
    cout << base << "^" << exp << " = " << power(base, exp) << endl;
}

    return 0;
}
