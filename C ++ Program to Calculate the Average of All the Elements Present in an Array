#include <iostream>
using namespace std;

int main(){
    int n;
    cout << "Enter the size of the Array: ";
    cin >> n;

    double arr[100];
    double sum = 0.0;

    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++){
        cin >> arr[i];
        sum += arr[i];
}
    double average = sum / n;

    cout << "The average of the array elements is: " << average << endl;

    return 0;
}
